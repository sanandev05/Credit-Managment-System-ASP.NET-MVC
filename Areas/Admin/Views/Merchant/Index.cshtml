@model IEnumerable<Credit_Managment_System_ASP.NET_MVC.View_Models.MerchantVM>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Merchants</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New Merchant</a>
</p>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				Logo
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Branches)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedAt)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UpdatedAt)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td class="d-flex align-content-center justify-content-center">
					<img src="@item.LogoUrl" alt="@item.Logo" style="height: 100px; width: 100px;" />
				</td>
				<td>
					@if (item.Branches == null)
					{
						<span>No branches available</span>
					}
					@foreach (var branch in item.Branches)
					{
						@branch.Name;  <br>	
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedAt)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UpdatedAt)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
