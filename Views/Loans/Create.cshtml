@model Credit_Managment_System_ASP.NET_MVC.View_Models.LoanVM

@{
    ViewBag.Title = "Create New Loan";
}

<h2>Create New Loan</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="LoanAmount" class="control-label">Loan Amount</label>
        <input asp-for="LoanAmount" class="form-control" />
        <span asp-validation-for="LoanAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfApplication" class="control-label">Date of Application</label>
        <input asp-for="DateOfApplication" type="date" class="form-control" />
        <span asp-validation-for="DateOfApplication" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerId" class="control-label">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
            <option value="">-- Select a Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label">Employee</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
            <option value="">-- Select an Employee --</option>
        </select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Create</button>
</form>

