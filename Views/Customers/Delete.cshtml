@model Credit_Managment_System_ASP.NET_MVC.View_Models.CustomerVM

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h4>Are you sure you want to delete this customer?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Surname</dt>
    <dd class="col-sm-10">@Model.Surname</dd>

    <dt class="col-sm-2">Phone Number</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
